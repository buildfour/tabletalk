# TableTalk AI Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/tabletalk

# ElevenLabs Voice AI Configuration
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_AGENT_ID=your_agent_id_here

# Google Gemini AI Configuration (for order parsing)
# Get your API key from: https://aistudio.google.com/
# This is used by the /api/ai/parse-order endpoint for accurate tray management
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: For Vertex AI (production deployment)
# GOOGLE_CLOUD_PROJECT=your_project_id
# GOOGLE_CLOUD_REGION=us-central1
